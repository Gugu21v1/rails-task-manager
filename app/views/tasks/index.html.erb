<h1 class="center">My Tasks</h1>
<div class="container">
<ul>
    <% @tasks.each do | task | %>
      <h3 class="titles">
        <li>
          <% if task.completed %>
            <%= '<i class="fa-solid fa-check"></i>'.html_safe %>
            <s class="green"><%= link_to task.title, task_path(task) %></s>
                      <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
            <i class="fa-solid fa-trash red"></i>
          <% end %>
          <% else %>
            <div class="orange">
              <%= '<i class="fa-solid fa-xmark"></i>'.html_safe %>
              <%= link_to task.title, task_path(task) %>
                        <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
            <i class="fa-solid fa-trash red"></i>
          <% end %>
            </div>
          <% end %>

        </li>
      </h3>
    <% end %>
  </ul>
  <br>
</div>
  <p class="center titles"><%= link_to "Create a new Task", create_task_path %></p>
